# Database Configuration (Infomaniak MySQL)
DB_HOST=xxxxx.myd.infomaniak.com
DB_USER=xxxxx_ludo
DB_PASSWORD=VOTRE_MOT_DE_PASSE_BDD
DB_NAME=xxxxx_ludo
DB_PORT=3306

# JWT Configuration (generer une cle securisee)
# Utiliser: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=VOTRE_CLE_JWT_SECURISEE_64_CARACTERES_MINIMUM

# Server Configuration
PORT=3000
NODE_ENV=production

# Application
APP_NAME=Ludotheque
APP_URL=https://ludo.fcsc74.fr

# Email/SMS Encryption (32 bytes hex for AES-256)
# Utiliser: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
EMAIL_ENCRYPTION_KEY=VOTRE_CLE_ENCRYPTION_64_CARACTERES_HEX

# Structure Information
STRUCTURE_NOM=Ludotheque FCSC74
STRUCTURE_ADRESSE=Adresse de la ludotheque
